@model EmployeeTempTracker.Models.ScreeningModel
@{
    ScreeningModel screening = ViewData["Screening"] as EmployeeTempTracker.Models.ScreeningModel;
}
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w3-container w3-red">
    <h2>Review Screening</h2>
    <p>Take ScreeningModel screening from ProcessScreening and display/edit</p>
</div>
<br />

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Screening</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(screening => screening.EmpId)

        <div class="form-group">
            @Html.LabelFor(screening => screening.EmpId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(screening => screening.EmpId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(screening => screening.EmpId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(screening => screening.Date, htmlAttributes: new { @class = "control-label col-md-2" })

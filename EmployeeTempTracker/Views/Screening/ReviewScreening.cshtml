                @Html.EditorFor(screening => screening.IntlTravel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(screening => screening.IntlTravel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
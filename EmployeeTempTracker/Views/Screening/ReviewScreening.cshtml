                @Html.EditorFor(screening => screening.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(screening => screening.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(screening => screening.Temp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(screening => screening.Temp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(screening => screening.Temp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(screening => screening.Symptoms, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(screening => screening.Symptoms, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(screening => screening.Symptoms, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(screening => screening.CloseContact, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(screening => screening.CloseContact, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(screening => screening.CloseContact, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(screening => screening.IntlTravel, htmlAttributes: new { @class = "control-label col-md-2" })

<div id="login_form" class="w3-card w3-margin-left w3-margin-right">
    <div class="w3-container w3-blue-grey"><h4 class="w3-center">User Login</h4></div>
    <form class="w3-container" action="./Login/AuthUser" method="Get">
        <input class="w3-input w3-round w3-border w3-border-grey w3-margin-top" type="text" size="50" maxlength="50" name="uname" placeholder="Username" />
        <input class="w3-input w3-round w3-border w3-border-grey w3-margin-top" type="text" size="50" maxlength="50" name="passwd" placeholder="Password" />

        <!-- Center submit button in the middle with 1/3rd container width -->
        <div class="w3-row">
            <div class="w3-third"><p></p></div>
            <div class="w3-third w3-container w3-margin-top w3-margin-bottom">
                <input class="w3-btn w3-block w3-blue-grey w3-border w3-border-black w3-round-large w3-padding-small" type="submit" value="Submit" name="authenticate_user" />
            </div>
            <div class="w3-third"><p></p></div>
        </div>
    </form>
</div>

<hr />

<div class="w3-container">
    <p class="w3-center">New User? Request registration <a href="./Home">here</a>.</p>
</div>